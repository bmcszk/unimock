{
    "editor": {
        "formatOnSave": true,
        "tabSize": 4,
        "insertSpaces": true,
        "rulers": [
            100
        ],
        "wordWrap": "off"
    },
    "go": {
        "formatTool": "gofmt",
        "lintTool": "golangci-lint",
        "lintOnSave": true,
        "testOnSave": true,
        "coverageOnSave": true
    },
    "files": {
        "exclude": {
            "**/.git": true,
            "**/vendor": true,
            "**/node_modules": true,
            "**/.cursor": true
        },
        "watcherExclude": {
            "**/.git/objects/**": true,
            "**/vendor/**": true,
            "**/node_modules/**": true,
            "**/.cursor/**": true
        }
    },
    "search": {
        "exclude": {
            "**/vendor": true,
            "**/node_modules": true,
            "**/.git": true,
            "**/.cursor": true
        }
    },
    "terminal": {
        "integrated": {
            "shell": {
                "linux": "/usr/bin/zsh"
            }
        }
    }
}
